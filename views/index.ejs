<%- include('./navbar.ejs', { connected: connected }) -%>
  <main class="ml-5 mr-5">

    <div class="container-fluid">
      <div class="row justify-content-center ml-5 pl-4">
        <div class="col">
          <div class="btn-group" role="group">
            <% for (let i = 0; i < categories.length; i++) { %>
            <button type="button" class="btn btn-secondary">
              <a style="text-decoration: none; color: white;" href="/<%= lang %><%= categories[i] %>"><%= categories[i] %></a>
            </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid" style="overflow-y: auto; overscroll-behavior-y: contain; scroll-snap-type: y mandatory;">

      <div class="row justify-content-center">

        <% for (let i = 0; i < headlines.length; i++) { %>
        <div class="card pl-0 pr-0 m-3 col-md-5 col-ms-3 bg-secondary" style=" color: white;">
            <img src='<% if(headlines[i].urlToImage !== null && headlines[i].urlToImage !== 'null') { %><%= headlines[i].urlToImage %><% } else { %> https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQVbY6UVeevsUNd4_-zX7-qqDn8Ew_a7qSi1JDD3MSach4C5djd&s <% } %>' class="card-img-top img-fluid" alt="Article image">
          <div class="card-body" >
            <h5 class="card-title"><%= headlines[i].title %></h5>
            <p class="card-text"><%= headlines[i].description %></p>
            <a href='<%= headlines[i].url %>' class="btn btn-primary" target="_blank">Go to article</a>
          </div>
        </div>
        <% } %>

      </div>
    </div>

  </main>
<%- include('./footer.ejs') -%>
